<body>
<h1 class="center">Student Records</h1>
 
<p class="center"><%= link_to 'Add New Record', new_record_path %></p>

<%= render 'searchform' %>

<br>
<br>
<table class="minimalistBlack center" >
  <tr>
    <th>Student ID</th>
    <th>Student Name</th>
    <th>View Record</th>
    <th>Update Record</th>
    <th>Delete Record</th>
  </tr>
 
  <% @records.each do |record| %>
    <tr>
      <td><%= record.studentid %></td>
      <td><%= record.sname %></td>
      <td><%= link_to 'View', record_path(record) %></td>
      <td><%= link_to 'Update' , edit_record_path(record) %></td>
      <td><%= link_to 'Destroy', record_path(record) , method: :delete , data: {confirm: "Are you sure?"}  %></td>
    </tr>
  <% end %>
</table>
<p class="center"><%= link_to 'Dummy data', records_duplicate_path() %></p>
<% if @records.any? %>
<p class="center"><%= link_to('Destroy All', records_destroyAll_path() , data: {confirm: 'You cannot retrieve this data. Confirm?'} ) %></p>
<% end %>
</body>